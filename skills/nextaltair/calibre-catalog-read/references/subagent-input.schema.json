{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "CalibreSubagentInput",
  "type": "object",
  "required": ["book_id", "title", "lang", "source_files"],
  "properties": {
    "book_id": { "type": "integer", "minimum": 1 },
    "title": { "type": "string", "minLength": 1 },
    "lang": { "type": "string", "enum": ["ja", "en"] },
    "source_files": {
      "type": "array",
      "minItems": 1,
      "maxItems": 10,
      "items": { "type": "string", "minLength": 1 }
    },
    "notes": { "type": "string" }
  },
  "additionalProperties": false
}
